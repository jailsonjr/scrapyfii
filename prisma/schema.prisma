generator client {
  provider = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]  
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

model tickers_info {
  id String @id @default(uuid())
  ticker String @unique
  ticker_type String?
  ticker_name String? @unique
  ticker_admin String?
}

model tickers_history_price {
  ticker_price_id String @id @default(uuid())
  ticker String 
  ticker_date DateTime @db.Date
  ticker_price_close Decimal
  ticker_price_open Decimal
  ticker_price_high Decimal
  ticker_price_low Decimal
  ticker_price_volume Int
  updated_at DateTime @updatedAt @default(now())
}

model tickers_error {
  ticker String @unique
  ticker_date DateTime @db.Date
  ticker_error String @db.Text
}

model tickers_queue {
  ticker String @unique
}

